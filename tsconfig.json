{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "typeRoots": ["./app/@types", "./node_modules/@types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
